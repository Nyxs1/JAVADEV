        "clear": "php artisan cache:clear && php artisan config:clear && php artisan route:clear && php artisan view:clear",
        "optimize": "npm run clear && php artisan optimize && npm run build"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "alpinejs": "^3.15.3"
    }
}
