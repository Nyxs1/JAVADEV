{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "vite": "vite",
        "artisan": "php artisan serve",
        "dev": "concurrently \"npm run artisan\" \"npm run vite\"",
